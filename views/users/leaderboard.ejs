<% layout('/layouts/boilerplate') %>

<style>
    :root {
        --leaderboard-bg: linear-gradient(135deg, #667eea 0%, #01060e 100%);
        --card-bg: rgba(255, 255, 255, 0.95);
        --card-bg-alt: rgba(255, 255, 255, 0.98);
        --text-primary: #2c3e50;
        --text-secondary: #7f8c8d;
        --accent-color: #3498db;
        --success-color: #27ae60;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --glass-bg: rgba(14, 1, 1, 0.25);
        --glass-border: rgba(255, 255, 255, 0.18);
        --shadow-light: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        --shadow-dark: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        --gold: linear-gradient(135deg, #ffd700, #ffb347);
        --silver: linear-gradient(135deg, #c0c0c0, #a8a8a8);
        --bronze: linear-gradient(135deg, #cd7f32, #a0522d);
    }

    body {
        background: var(--leaderboard-bg);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .leaderboard-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 0 3rem;
        background: rgba(8, 57, 147, 0.8) !important; /* Light transparency for base */
    backdrop-filter: blur(15px); 
    -webkit-backdrop-filter: blur(15px);
    
    /* Apply a blue border/shadow for themed lift */
    border: 2px solid var(--border-color);
    box-shadow: 0 8px 30px rgba(0, 9, 17, 0.925); /* Soft blue shadow */
    }

    .leaderboard-header {
        text-align: center;
        margin-bottom: 3rem;
        color: white;
        padding : 3rem ;
    }

    .leaderboard-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(237, 231, 231, 0.3);
    }

    .leaderboard-header p {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 0;
        text-shadow: 2px 2px 4px rgba(252, 250, 250, 0.956);
    }
    [data-theme="dark"] .leaderboard-container {
    background: rgba(14, 49, 109, 0.566) !important; /* Darker transparency */
    border-color: rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 30px rgba(0, 123, 255, 0.1); /* Subtle dark mode shadow */
    color: white !important;
}
[data-theme="light"] .leaderboard-container {
    background: rgba(14, 49, 109, 0.566) !important; /* Darker transparency */
    box-shadow: 0 8px 30px rgba(0, 123, 255, 0.1); /* Subtle dark mode shadow */
    border-color: rgba(255, 255, 255, 0.1);
    color: rgb(6, 5, 5) !important; /* Ensure text is white */
}

    .current-user-rank {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 1rem;
        padding: 2rem;
        margin-bottom: 3rem;
        color: white;
        text-align: center;
        box-shadow: var(--shadow-light);
        text-shadow: 2px 2px 4px rgba(252, 250, 250, 0.956);

    }

    .current-user-rank h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .rank-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(252, 250, 250, 0.956);

    }

    .rank-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }

    .rank-stat {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .rank-stat-label {
        font-size: 0.9rem;
        opacity: 0.8;
        margin-bottom: 0.25rem;
    }

    .rank-stat-value {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .leaderboard-table {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        background: linear-gradient(
      135deg,
      rgba(7, 41, 46, 0.9),
      rgba(17, 112, 136, 0.9),
      rgba(9, 72, 80, 0.9)
    ),
    }

    .leaderboard-header-row {
        background: var(--glass-bg);
        color: white;
        padding: 1.5rem;
        display: grid;
        grid-template-columns: 80px 1fr 120px 120px 120px;
        gap: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.9rem;
    }

    .leaderboard-row {
        padding: 1.5rem;
        display: grid;
        grid-template-columns: 80px 1fr 120px 120px 120px;
        gap: 1rem;
        align-items: center;
        border-bottom: 1px solid #e9ecef;
        transition: background-color 0.3s ease;
    }

    .leaderboard-row:hover {
        background-color: #02080d;
    }

    .leaderboard-row.current-user {
        background: linear-gradient(135deg, rgba(52, 152, 219, 0.1), rgba(155, 89, 182, 0.1));
        border-left: 4px solid var(--accent-color);
    }

    .leaderboard-row.top-3 {
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 179, 71, 0.1));
    }

    .rank-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-weight: 700;
        font-size: 1.1rem;
        color: white;
    }

    .rank-1 {
        background: var(--gold);
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
        -webkit-text-fill-color: #ec1e1e;
    }

    .rank-2 {
        background: var(--silver);
        box-shadow: 0 4px 15px rgba(192, 192, 192, 0.4);
        -webkit-text-fill-color: #ec1e1e;

    }

    .rank-3 {
        background: var(--bronze);
        box-shadow: 0 4px 15px rgba(205, 127, 50, 0.4);
        -webkit-text-fill-color: #ec1e1e;

    }

    .rank-other {
        background: linear-gradient(135deg, #95a5a6, #7f8c8d);
        -webkit-text-fill-color: #ec1e1e;

    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #e9ecef;
        transition: border-color 0.3s ease;
    }

    .leaderboard-row:hover .user-avatar {
        border-color: var(--accent-color);

    }

    .user-details h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        -webkit-text-fill-color: #070707;

    }

    .user-details p {
        margin: 0.25rem 0 0 0;
        font-size: 0.9rem;
        color: var(--text-secondary);
        -webkit-text-fill-color: #fbfbfb;

    }

    .points-display {
        text-align: center;
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--accent-color);
        -webkit-text-fill-color: #f8f8f8;

    }

    .badges-count {
        text-align: center;
        font-weight: 600;
        color: var(--success-color);
        -webkit-text-fill-color: #1eec8c;

    }

    .stats-display {
        text-align: center;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .stats-display span {
        display: block;
        font-weight: 500;
    }

    .empty-leaderboard {
        text-align: center;
        padding: 3rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .empty-leaderboard i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    .leaderboard-info {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 1rem;
        padding: 2rem;
        color: white;
        box-shadow: var(--shadow-light);
    }

    .leaderboard-info h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .scoring-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .scoring-item {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        padding: 1rem;
        text-align: center;
    }

    .scoring-item h4 {
        margin: 0 0 0.5rem 0;
        font-size: 1rem;
        font-weight: 600;
    }

    .scoring-item p {
        margin: 0;
        font-size: 0.9rem;
        opacity: 0.9;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .leaderboard-header h1 {
            font-size: 2.5rem;
        }

        .leaderboard-header-row,
        .leaderboard-row {
            grid-template-columns: 60px 1fr 80px;
            gap: 0.5rem;
            padding: 1rem;
        }

        .leaderboard-header-row {
            font-size: 0.8rem;
        }

        .rank-badge {
            width: 35px;
            height: 35px;
            font-size: 1rem;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
        }

        .user-details h3 {
            font-size: 1rem;
        }

        .points-display,
        .badges-count,
        .stats-display {
            font-size: 0.9rem;
        }

        .rank-stats {
            grid-template-columns: repeat(2, 1fr);
        }

        .scoring-info {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 480px) {
        .leaderboard-header h1 {
            font-size: 2rem;
        }

        .current-user-rank {
            padding: 1.5rem;
        }

        .rank-number {
            font-size: 2rem;
        }

        .leaderboard-header-row,
        .leaderboard-row {
            grid-template-columns: 50px 1fr 70px;
        }

        .leaderboard-header-row {
            display: none; /* Hide header on very small screens */
        }

        .user-info {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }

        .rank-stats {
            grid-template-columns: 1fr;
        }
    }

    /* Trophy animations */
    @keyframes trophy-glow {
        0%, 100% { box-shadow: 0 0 20px rgba(255, 215, 0, 0.5); }
        50% { box-shadow: 0 0 30px rgba(255, 215, 0, 0.8); }
    }

    .rank-1 {
        animation: trophy-glow 2s ease-in-out infinite;
    }
</style>

<div class="leaderboard-container">
    <!-- Header -->
    <div class="leaderboard-header">
        <h1><i class="fa-solid fa-trophy me-3"></i>Travel Leaderboard</h1>
        <p>Compete with fellow travelers and climb the ranks!</p>
    </div>

    <!-- Current User Rank -->
    <% if (currentUserRank) { %>
        <div class="current-user-rank">
            <h2><i class="fa-solid fa-user me-2"></i>Your Current Rank</h2>
            <div class="rank-number">#<%= currentUserRank.rank %></div>
            <div class="rank-stats">
                <div class="rank-stat">
                    <div class="rank-stat-label">Total Points</div>
                    <div class="rank-stat-value"><%= currentUserRank.totalPoints %></div>
                </div>
                <div class="rank-stat">
                    <div class="rank-stat-label">Badges Earned</div>
                    <div class="rank-stat-value"><%= currentUserRank.badgesCount %></div>
                </div>
                <div class="rank-stat">
                    <div class="rank-stat-label">Listings</div>
                    <div class="rank-stat-value"><%= currentUserRank.travelStats.totalListings %></div>
                </div>
                <div class="rank-stat">
                    <div class="rank-stat-label">Reviews</div>
                    <div class="rank-stat-value"><%= currentUserRank.travelStats.totalReviews %></div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Leaderboard Table -->
    <% if (leaderboard && leaderboard.length > 0) { %>
        <div class="leaderboard-table">
            <div class="leaderboard-header-row">
                <div>Rank</div>
                <div>Traveler</div>
                <div>Points</div>
                <div>Badges</div>
                <div>Activity</div>
            </div>

            <% leaderboard.forEach(user => { %>
                <div class="leaderboard-row <%= user.rank <= 3 ? 'top-3' : '' %> <%= user._id.toString() === (typeof req !== 'undefined' && req.user ? req.user._id.toString() : '') ? 'current-user' : '' %>">
                    <div class="rank-badge rank-<%= user.rank <= 3 ? user.rank : 'other' %>">
                        <%= user.rank %>
                    </div>

                    <div class="user-info">
                        <img src="<%= user.avatar %>" alt="<%= user.username %>" class="user-avatar">
                        <div class="user-details">
                            <h3><%= user.username %></h3>
                            <p>Travel Enthusiast</p>
                        </div>
                    </div>

                    <div class="points-display">
                        <%= user.totalPoints %>
                    </div>

                    <div class="badges-count">
                        <i class="fa-solid fa-medal me-1"></i>
                        <%= user.badgesCount %>
                    </div>

                    <div class="stats-display">
                        <span><%= user.travelStats.totalListings %> listings</span>
                        <span><%= user.travelStats.totalReviews %> reviews</span>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="empty-leaderboard">
            <i class="fa-solid fa-trophy"></i>
            <h3>No Rankings Available</h3>
            <p>Start exploring and earning points to appear on the leaderboard!</p>
        </div>
    <% } %>

    <!-- Scoring Information -->
    <div class="leaderboard-info">
        <h3><i class="fa-solid fa-info-circle me-2"></i>How Points Are Calculated</h3>
        <div class="scoring-info">
            <div class="scoring-item">
                <h4><i class="fa-solid fa-medal me-2"></i>Badges</h4>
                <p>Earn points for unlocking achievements and badges</p>
            </div>
            <div class="scoring-item">
                <h4><i class="fa-solid fa-home me-2"></i>Listings</h4>
                <p>2 points per listing you create</p>
            </div>
            <div class="scoring-item">
                <h4><i class="fa-solid fa-star me-2"></i>Reviews</h4>
                <p>1 point per review you write</p>
            </div>
            <div class="scoring-item">
                <h4><i class="fa-solid fa-map-marker-alt me-2"></i>Destinations</h4>
                <p>3 points per favorite destination</p>
            </div>
        </div>
    </div>
</div>
