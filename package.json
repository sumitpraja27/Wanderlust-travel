{
  "engines": {
    "node": ">=18.0.0"
  },
  "name": "wanderlust",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/models tests/utils",
    "test:integration": "jest tests/auth.test.js tests/listings.test.js tests/reviews.test.js",
    "start": "node app.js",
    "dev": "nodemon app.js"
  },
  "keywords": [
    "travel",
    "nodejs",
    "express",
    "mongodb",
    "ejs"
  ],
  "author": "Kaushik Mandal",
  "license": "MIT",
  "description": "Wanderlust - a travel experience sharing platform built with Node.js, Express, MongoDB, and EJS.",
  "dependencies": {
    "@google-cloud/translate": "^9.3.0",
    "@mapbox/mapbox-sdk": "^0.16.2",
    "@playwright/test": "^1.57.0",
    "axios": "^1.13.2",
    "cloudinary": "^2.9.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "ejs-mate": "^4.0.0",
    "express": "^4.22.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.3.1",
    "google-translate-api-x": "^10.7.2",
    "helmet": "^8.1.0",
    "i18n": "^0.15.3",
    "joi": "^18.0.2",
    "jspdf": "^4.0.0",
    "kill-port": "^2.0.1",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongodb": "^7.0.0",
    "mongoose": "^8.21.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^2.2.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "openai": "^6.16.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^9.0.1",
    "playwright": "^1.56.0",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^7.0.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  }
}
