<script>
// Load vacation slots when tab is clicked
document.addEventListener('DOMContentLoaded', function() {
    const vacationSlotsTab = document.getElementById('vacation-slots-tab');
    const vacationSlotsList = document.getElementById('vacationSlotsList');
    
    vacationSlotsTab.addEventListener('click', function() {
        loadVacationSlots();
    });
    
    function loadVacationSlots() {
        fetch('/holiday/vacation-slots')
            .then(response => response.json())
            .then(data => {
                displayVacationSlots(data.vacationSlots || []);
            })
            .catch(error => {
                console.error('Error loading vacation slots:', error);
                vacationSlotsList.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fa-solid fa-exclamation-triangle fa-2x text-danger mb-3"></i>
                        <p>Failed to load vacation slots</p>
                    </div>
                `;
            });
    }
    
    function displayVacationSlots(slots) {
        if (slots.length === 0) {
            vacationSlotsList.innerHTML = `
                <div class="text-center py-4">
                    <i class="fa-solid fa-calendar-plus fa-3x text-muted mb-3"></i>
                    <h5>No vacation slots marked</h5>
                    <p class="text-muted">Visit the <a href="/holiday" class="text-decoration-none">Holiday Calendar</a> to mark holidays as vacation slots!</p>
                </div>
            `;
            return;
        }
        
        const slotsHtml = slots.map(slot => {
            const date = new Date(slot.date);
            const formattedDate = date.toLocaleDateString('en-US', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            });
            
            return `
                <div class="vacation-slot-item" data-date="${slot.date}">
                    <div class="vacation-slot-header">
                        <h6 class="vacation-slot-name">${slot.holidayName}</h6>
                        <div class="vacation-slot-actions">
                            <button class="btn btn-remove-slot" onclick="removeVacationSlot('${slot.date}')">
                                <i class="fa-solid fa-trash me-1"></i>Remove
                            </button>
                        </div>
                    </div>
                    <div class="vacation-slot-date">${formattedDate}</div>
                    <div class="vacation-slot-meta">
                        <span><i class="fa-solid fa-flag me-1"></i>${slot.country}</span>
                        <span><i class="fa-solid fa-tag me-1"></i>${slot.holidayType}</span>
                        <span><i class="fa-solid fa-clock me-1"></i>Marked ${new Date(slot.markedAt).toLocaleDateString()}</span>
                    </div>
                </div>
            `;
        }).join('');
        
        vacationSlotsList.innerHTML = `
            <div class="mb-3">
                <p class="text-muted">You have marked ${slots.length} holiday${slots.length > 1 ? 's' : ''} as vacation slots</p>
            </div>
            ${slotsHtml}
        `;
    }
    
    window.removeVacationSlot = function(date) {
        if (!confirm('Remove this vacation slot?')) return;
        
        fetch(`/holiday/vacation-slot/${date}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                loadVacationSlots(); // Reload the list
            } else {
                alert('Failed to remove vacation slot');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to remove vacation slot');
        });
    };
});
</script>