<% layout('/layouts/boilerplate') %>

<%
// Helper functions for template
function getCategoryIcon(category) {
    const icons = {
        explorer: 'compass',
        reviewer: 'star',
        host: 'home',
        social: 'users',
        milestone: 'medal'
    };
    return icons[category] || 'trophy';
}

function getCategoryDescription(category) {
    const descriptions = {
        explorer: 'Discover new places and expand your travel horizons',
        reviewer: 'Share your experiences and help others make informed decisions',
        host: 'Create amazing listings and welcome travelers from around the world',
        social: 'Connect with the travel community and build your network',
        milestone: 'Celebrate your journey and reach important travel milestones'
    };
    return descriptions[category] || 'Complete challenges and earn recognition';
}
%>

<style>
    :root {
        --achievement-bg: linear-gradient(135deg, #0f0c29 0%, #302b63 25%, #24243e 50%, #667eea 75%, #764ba2 100%);
        --card-bg: rgba(255, 255, 255, 0.98);
        --card-bg-alt: rgba(255, 255, 255, 0.99);
        --text-primary: #1a1a2e;
        --text-secondary: #6c7293;
        --accent-color: #6366f1;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --glass-bg: rgba(255, 255, 255, 0.15);
        --glass-border: rgba(255, 255, 255, 0.2);
        --shadow-light: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        --shadow-dark: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --gradient-success: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --gradient-locked: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        --animation-duration: 0.3s;
        --animation-timing: cubic-bezier(0.4, 0, 0.2, 1);
    }

    * {
        box-sizing: border-box;
    }

    body {
        background: var(--achievement-bg);
        background-attachment: fixed;
        min-height: 100vh;
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: var(--text-primary);
        overflow-x: hidden;
    }

    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background:
            radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
            radial-gradient(circle at 40% 40%, rgba(120, 219, 226, 0.3) 0%, transparent 50%);
        pointer-events: none;
        z-index: -1;
    }

    .achievements-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .achievements-header {
        text-align: center;
        margin-bottom: 3rem;
        color: white;
    }

    .achievements-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .achievements-header p {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .stats-overview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 1rem;
        padding: 1.5rem;
        text-align: center;
        color: white;
        box-shadow: var(--shadow-light);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-dark);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        display: block;
    }

    .stat-label {
        font-size: 1rem;
        opacity: 0.9;
        font-weight: 500;
    }

    .category-section {
        margin-bottom: 3rem;
    }

    .category-header {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: white;
        box-shadow: var(--shadow-light);
    }

    .category-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .category-description {
        opacity: 0.8;
        margin: 0;
    }
    .search-btn {
        padding-top: 0.5rem;  
        padding-bottom: 0.5rem;
}


    .achievements-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .achievement-card {
        background: var(--card-bg);
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .achievement-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .achievement-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 1.5rem;
        text-align: center;
        color: white;
        position: relative;
    }

    .achievement-card.earned .achievement-header {
        background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
    }

    .achievement-card.locked .achievement-header {
        background: linear-gradient(135deg, #95a5a6 0%, #bdc3c7 100%);
    }

    .achievement-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.9;
    }

    .achievement-name {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .achievement-description {
        font-size: 0.95rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .achievement-body {
        padding: 1.5rem;
    }

    .progress-section {
        margin-bottom: 1.5rem;
    }

    .progress-label {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .progress {
        height: 8px;
        border-radius: 4px;
        background-color: #ecf0f1;
        overflow: hidden;
    }

    .progress-bar {
        background: linear-gradient(90deg, #3498db, #2980b9);
        transition: width 0.3s ease;
    }

    .achievement-card.earned .progress-bar {
        background: linear-gradient(90deg, #27ae60, #229954);
    }

    .achievement-status {
        text-align: center;
        padding: 1rem;
        background: #f8f9fa;
        border-top: 1px solid #e9ecef;
    }

    .status-earned {
        color: var(--success-color);
        font-weight: 600;
    }

    .status-locked {
        color: var(--text-secondary);
        font-weight: 500;
    }

    .current-value {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-top: 0.5rem;
    }

    .earned-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: var(--success-color);
        color: white;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        box-shadow: 0 2px 8px rgba(39, 174, 96, 0.3);
    }

    .locked-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        border-radius: 1rem;
    }

    .empty-category {
        text-align: center;
        padding: 3rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .empty-category i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .achievements-header h1 {
            font-size: 2.5rem;
        }

        .achievements-grid {
            grid-template-columns: 1fr;
        }

        .stats-overview {
            grid-template-columns: repeat(2, 1fr);
        }

        .category-title {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .stats-overview {
            grid-template-columns: 1fr;
        }

        .achievements-header h1 {
            font-size: 2rem;
        }

        .stat-number {
            font-size: 2rem;
        }
    }

    /* Category specific colors */
    .category-explorer .achievement-header {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
    }

    .category-explorer.earned .achievement-header {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
    }

    .category-reviewer .achievement-header {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    }

    .category-reviewer.earned .achievement-header {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
    }

    .category-host .achievement-header {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
    }

    .category-host.earned .achievement-header {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
    }

    .category-social .achievement-header {
        background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
    }

    .category-social.earned .achievement-header {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
    }

    .category-milestone .achievement-header {
        background: linear-gradient(135deg, #1abc9c 0%, #16a085 100%);
    }

    .category-milestone.earned .achievement-header {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
    }
</style>

<div class="achievements-container">
    <!-- Header -->
    <div class="achievements-header">
        <h1><i class="fa-solid fa-trophy me-3"></i>My Achievements</h1>
        <p>Track your progress and unlock badges as you explore the world of Wanderlust</p>
    </div>

    <!-- Stats Overview -->
    <div class="stats-overview">
        <div class="stat-card">
            <span class="stat-number"><%= user.badges.length %></span>
            <span class="stat-label">Badges Earned</span>
        </div>
        <div class="stat-card">
            <span class="stat-number"><%= Object.keys(badgesByCategory).length %></span>
            <span class="stat-label">Categories</span>
        </div>
        <div class="stat-card">
            <span class="stat-number"><%= user.travelStats.totalListings %></span>
            <span class="stat-label">Listings Created</span>
        </div>
        <div class="stat-card">
            <span class="stat-number"><%= user.travelStats.totalReviews %></span>
            <span class="stat-label">Reviews Written</span>
        </div>
    </div>

    <!-- Achievement Categories -->
    <% Object.keys(badgesByCategory).forEach(category => { %>
        <div class="category-section">
            <div class="category-header">
                <h2 class="category-title">
                    <i class="fa-solid fa-<%= getCategoryIcon(category) %> me-2"></i>
                    <%= category.charAt(0).toUpperCase() + category.slice(1) %> Achievements
                </h2>
                <p class="category-description"><%= getCategoryDescription(category) %></p>
            </div>

            <div class="achievements-grid">
                <% badgesByCategory[category].forEach(badge => { %>
                    <div class="achievement-card <%= badge.earned ? 'earned' : 'locked' %> category-<%= category %>">
                        <% if (badge.earned) { %>
                            <div class="earned-badge">
                                <i class="fa-solid fa-check"></i>
                            </div>
                        <% } %>

                        <div class="achievement-header">
                            <div class="achievement-icon">
                                <i class="<%= badge.icon %>"></i>
                            </div>
                            <h3 class="achievement-name"><%= badge.name %></h3>
                            <p class="achievement-description"><%= badge.description %></p>
                        </div>

                        <div class="achievement-body">
                            <% if (!badge.earned) { %>
                                <div class="progress-section">
                                    <div class="progress-label">
                                        <span>Progress</span>
                                        <span><%= badge.progress %>%</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: <%= badge.progress %>%"></div>
                                    </div>
                                    <div class="current-value">
                                        Current: <%= badge.currentValue %> / <%= badge.criteria.threshold %>
                                    </div>
                                </div>
                            <% } %>

                            <div class="achievement-status">
                                <% if (badge.earned) { %>
                                    <div class="status-earned">
                                        <i class="fa-solid fa-trophy me-2"></i>Achievement Unlocked!
                                    </div>
                                <% } else { %>
                                    <div class="status-locked">
                                        <i class="fa-solid fa-lock me-2"></i>Keep going to unlock this badge
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <% if (!badge.earned) { %>
                            <div class="locked-overlay">
                                <i class="fa-solid fa-lock"></i>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            </div>
        </div>
    <% }); %>

    <% if (Object.keys(badgesByCategory).length === 0) { %>
        <div class="empty-category">
            <i class="fa-solid fa-trophy"></i>
            <h3>No Achievements Available</h3>
            <p>Check back later for new achievements to unlock!</p>
        </div>
    <% } %>
</div>
